            if (Txt_Choice12_Prob.Text == "")
            {
                Txt_Choice12_Prob.Text = "0";
            }
            if (Txt_Choice13_Prob.Text == "")
            {
                Txt_Choice13_Prob.Text = "0";
            }
            if (Txt_Choice14_Prob.Text == "")
            {
                Txt_Choice14_Prob.Text = "0";
            }
            if (Txt_Choice15_Prob.Text == "")
            {
                Txt_Choice15_Prob.Text = "0";
            }
            int Prob1 = Convert.ToInt32(Txt_Choice1_Prob.Text);
            int Prob2 = Convert.ToInt32(Txt_Choice2_Prob.Text);
            int Prob3 = Convert.ToInt32(Txt_Choice3_Prob.Text);
            int Prob4 = Convert.ToInt32(Txt_Choice4_Prob.Text);
            int Prob5 = Convert.ToInt32(Txt_Choice5_Prob.Text);
            int Prob6 = Convert.ToInt32(Txt_Choice6_Prob.Text);
            int Prob7 = Convert.ToInt32(Txt_Choice7_Prob.Text);
            int Prob8 = Convert.ToInt32(Txt_Choice8_Prob.Text);
            int Prob9 = Convert.ToInt32(Txt_Choice9_Prob.Text);
            int Prob10 = Convert.ToInt32(Txt_Choice10_Prob.Text);
            int Prob11 = Convert.ToInt32(Txt_Choice11_Prob.Text);
            int Prob12 = Convert.ToInt32(Txt_Choice12_Prob.Text);
            int Prob13 = Convert.ToInt32(Txt_Choice13_Prob.Text);
            int Prob14 = Convert.ToInt32(Txt_Choice14_Prob.Text);
            int Prob15 = Convert.ToInt32(Txt_Choice15_Prob.Text);
            
            int SumProb = Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 + Prob12 + Prob13 + Prob14 + Prob15;
            int RandNum = rng.Next(SumProb);
            RandNum++;
            Lbl_Spin.Text = "" + RandNum;

            if (1 < RandNum && RandNum < Prob1)
            {
                Lbl_Spin.Text = Txt_Choice1.Text;
            }
            else if(Prob1 < RandNum && RandNum < Prob1 + Prob2)
            {
                Lbl_Spin.Text = Txt_Choice2.Text;
            }
            else if (Prob1 + Prob2 < RandNum && RandNum < Prob1 + Prob2 + Prob3)
            {
                Lbl_Spin.Text = Txt_Choice3.Text;
            }
            else if (Prob1 + Prob2 + Prob3 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4)
            {
                Lbl_Spin.Text = Txt_Choice4.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5)
            {
                Lbl_Spin.Text = Txt_Choice5.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6)
            {
                Lbl_Spin.Text = Txt_Choice6.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7)
            {
                Lbl_Spin.Text = Txt_Choice7.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8)
            {
                Lbl_Spin.Text = Txt_Choice8.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9)
            {
                Lbl_Spin.Text = Txt_Choice9.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10)
            {
                Lbl_Spin.Text = Txt_Choice10.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11)
            {
                Lbl_Spin.Text = Txt_Choice11.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 + Prob12)
            {
                Lbl_Spin.Text = Txt_Choice12.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 + Prob12 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 + Prob12 + Prob13)
            {
                Lbl_Spin.Text = Txt_Choice13.Text;
            }
            else if (Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 + Prob12 + Prob13 < RandNum && RandNum < Prob1 + Prob2 + Prob3 + Prob4 + Prob5 + Prob6 + Prob7 + Prob8 + Prob9 + Prob10 + Prob11 + Prob12 + Prob13 + Prob14)
