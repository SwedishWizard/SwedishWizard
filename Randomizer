        private void Btn_Settings_Click(object sender, EventArgs e)
        {
            if(Btn_Settings.Text == "Settings")
            {
                Pnl_Settings.Show();
                Btn_Settings.Text = "Close Settings";
            }
            else if (Btn_Settings.Text == "Close Settings")
            {
                Pnl_Settings.Hide();
                Btn_Settings.Text = "Settings";
            }
        }

        private void button1_Click(object sender, EventArgs e)
        {
            if (Txt_Choice1_Prob.Text == "")
            {
                Txt_Choice1_Prob.Text = "0";
            }
            if (Txt_Choice2_Prob.Text == "")
            {
                Txt_Choice2_Prob.Text = "0";
            }
            if (Txt_Choice3_Prob.Text == "")
            {
